{
  "compilerOptions": {
    "target": "es2020",                    // Suporte moderno ao WebCrypto
    "module": "commonjs",
    "lib": ["es2020"],                     // Inclui recursos de crypto/web
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}